<Page
    x:Class="LottoAppProject.NumberGenerator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar Height="70" IsSticky="True">
            <AppBarButton x:ConnectionId='1' Label="Back" Icon="Back"                             />
            <AppBarButton x:ConnectionId='2' Label="Refresh" Icon="Refresh"                             />

            <AppBarButton x:ConnectionId='3' Label="Add Line Powerball"                             />
            <AppBarButton x:ConnectionId='4' Label="Generate Powerball Numbers"                             />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF8EDA7D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:ConnectionId='5' x:Name="btnGenerate" Content="Generate" HorizontalAlignment="Left" Margin="30,355,0,0" VerticalAlignment="Top" Width="139"                           Background="#FF1263B4" Foreground="#FFD8A316" FontStyle="Italic"/>
        <Button x:ConnectionId='6' x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="220,356,0,0" VerticalAlignment="Top" Width="140"                       Background="#FF1263B4" Foreground="#FFD8A316" FontStyle="Italic"/>
        <Button x:ConnectionId='7' x:Name="btnTest" Content="Add Line" HorizontalAlignment="Left" Margin="222,483,0,0" VerticalAlignment="Top"                       Width="139" Background="#FF1263B4" Foreground="#FFD8A316" FontStyle="Italic"/>
        <StackPanel Name="Display" Orientation="Horizontal" Margin="5"/>
        <TextBlock Margin="52,1,63,0" TextWrapping="Wrap" Text="Number Generator Lotto And LottoPlus" Height="77" Width="285" FontSize="30" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBlock Height="40" HorizontalAlignment="Left" Margin="2,117,-317,0" x:Name ="errormessage" VerticalAlignment="Top" Width="315" Foreground="#FFF7F1F1" FontSize="30"/>

    </Grid>
</Page>

