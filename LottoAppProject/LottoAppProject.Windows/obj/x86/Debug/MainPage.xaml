<Page
    x:Class="LottoAppProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF38B2B8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' x:Name="btnResults" Content="Results"   Height="126" Width="210" Background="#FF1263B4" Foreground="#FFD8A316" Margin="598,196,0,62"                          FontSize="20"/>
        <Button x:ConnectionId='2' x:Name="btnSettings" Content="Settings" Width="208" Height="126"  Background="#FF1263B4" Foreground="#FFD8A316" Margin="596,135,0,0" Grid.Row="1"                           FontSize="20" VerticalAlignment="Top" />
        <Button x:ConnectionId='3' x:Name="btnGenerate" Content="Number Generator"  Height="118" Width="212" Background="#FF1263B4" Foreground="#FFD8A316" Margin="596,361,0,289"                           FontSize="20" Grid.RowSpan="2" />
        
        <TextBlock Margin="0,82,199,237" TextWrapping="Wrap" Text="National Lottery Results" Width="527" HorizontalAlignment="Right" FontSize="50" Foreground="#FFF9F8F8" />
        <Image HorizontalAlignment="Left" Height="74" Margin="134,81,0,0" VerticalAlignment="Top" Width="494" Source="Image/salotteryresult_logo.png" />
    </Grid>
</Page>

