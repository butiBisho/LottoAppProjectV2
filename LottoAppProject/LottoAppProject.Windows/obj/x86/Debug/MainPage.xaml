<Page
    x:Class="LottoAppProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF38B2B8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' x:Name="btnResults" Content="View Results"   Height="126" Width="210" Background="#FF1263B4" Foreground="#FFD8A316" Margin="320,137,0,121" Grid.Row="1"                          FontSize="20"/>
        <Button x:ConnectionId='2' x:Name="btnSettings" Content="Settings" Width="208" Height="126"  Background="#FF1263B4" Foreground="#FFD8A316" Margin="798,137,0,121" Grid.Row="1"                           FontSize="20" />
        <Button x:ConnectionId='3' x:Name="btnGenerate" Content="Generate"  Height="118" Width="212" Background="#FF1263B4" Foreground="#FFD8A316" Margin="794,286,0,364"                           Grid.RowSpan="2" FontSize="20" />
        <Button x:ConnectionId='4' x:Name="btnDetails" Content="Add Details" Width="210" Height="118"  Background="#FF1263B4" Foreground="#FFD8A316" Margin="320,286,0,364"                          Grid.RowSpan="2" FontSize="20"/>
        <!--<Image Grid.Row="0" Source="Image/01XSAN-IM1001-sands-resort-mauritius-1475.jpg" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="UniformToFill"/>-->
        <TextBlock Margin="0,118,781,201" TextWrapping="Wrap" Text="LottoApp" Width="341" HorizontalAlignment="Right" FontSize="50" Foreground="#FFF9F8F8" FlowDirection="LeftToRight"/>
    </Grid>
</Page>

