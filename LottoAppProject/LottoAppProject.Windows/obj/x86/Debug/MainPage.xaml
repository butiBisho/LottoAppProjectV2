<Page
    x:Class="LottoAppProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF8EDA7D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' x:Name="btnResults" Content="View Results"   Height="70" Width="168" Background="#FF1263B4" Foreground="#FFD8A316" Margin="320,193,0,121" Grid.Row="1"                         />
        <Button x:ConnectionId='2' x:Name="btnSettings" Content="Settings" Width="168" Height="70"  Background="#FF1263B4" Foreground="#FFD8A316" Margin="846,193,0,121" Grid.Row="1"                           />
        <Button x:ConnectionId='3' x:Name="btnGenerate" Content="Generate"  Height="70" Width="168" Background="#FF1263B4" Foreground="#FFD8A316" Margin="846,46,0,268" Grid.Row="1"                           />
        <Button x:ConnectionId='4' x:Name="btnDetails" Content="Add Details" Width="168" Height="70"  Background="#FF1263B4" Foreground="#FFD8A316" Margin="320,48,0,266" Grid.Row="1"                         />
        <Image Grid.Row="0" Source="Image/lottery-balls-sphere-46068011.jpg" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Margin="0,2,3,317" TextWrapping="Wrap" Text="LottoApp" Width="341" HorizontalAlignment="Right" FontSize="50" Foreground="#FFF9F8F8" FlowDirection="RightToLeft"/>
    </Grid>
</Page>

