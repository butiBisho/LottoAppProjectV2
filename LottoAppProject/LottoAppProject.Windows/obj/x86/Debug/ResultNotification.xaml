<Page
    x:Class="LottoAppProject.ResultNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <AppBar IsSticky="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <AppBarButton x:ConnectionId='1' Grid.Column="1" Label="Refresh" Icon="Refresh"                              Margin="42,0,0,0"/>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Background="#FF38B2B8">
        <TextBlock HorizontalAlignment="Center" Margin="547,95,521,0" TextWrapping="Wrap" Text="Result Notification" Height="39" Width="298" VerticalAlignment="Top" FontSize="26" Foreground="#FFF5F0F0" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock Margin="482,214,454,0" TextWrapping="Wrap" Text="Receive a notification when results are available" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Foreground="#FFF5F0F0" FontSize="20" TextAlignment="Center" Width="430"/>
        
        <TextBlock x:Name="txtDisplay" HorizontalAlignment="Left" Margin="381,319,0,0" TextWrapping="Wrap" Text="Lotto" VerticalAlignment="Top" Height="29" Width="131" Foreground="#FFF5F0F0" FontSize="20" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Foreground="#FFF5F0F0" Margin="401,426,0,0" TextWrapping="Wrap" Text="Powerball" VerticalAlignment="Top" Width="131" Height="30" FontSize="20" TextAlignment="Center"/>       
        <AppBarButton x:ConnectionId='2' HorizontalAlignment="Left" Icon="Back" Label="Back" Margin="1,2,0,0" VerticalAlignment="Top"                           />
        <ToggleButton x:ConnectionId='3' x:Name="tbtnLotto" Content="ON/OFF" HorizontalAlignment="Left" Margin="639,312,0,0" VerticalAlignment="Top" Width="209" Height="59" IsThreeState="True"                                                                                                        />
        <ToggleButton x:ConnectionId='4' x:Name="tbtnPowerball" Content="ON/OFF" HorizontalAlignment="Left" Margin="639,409,0,0" VerticalAlignment="Top" Width="209" Height="59" IsThreeState="True"                                                                                                        />
        <TextBlock x:Name="txtbTest" HorizontalAlignment="Left" Margin="1016,314,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="53" Width="203" FontSize="20"/>
        <TextBlock x:Name="txtbPower" HorizontalAlignment="Left" Margin="1016,414,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="53" Width="203" FontSize="20"/>
    </Grid>
</Page>

