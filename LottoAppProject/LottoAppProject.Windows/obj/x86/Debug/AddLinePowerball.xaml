<Page
    x:Class="LottoAppProject.AddLinePowerball"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <AppBar IsSticky="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="*"/>
                    <ColumnDefinition  Width="4*"/>
                    <ColumnDefinition  Width="*"/>
                </Grid.ColumnDefinitions>
                <AppBarButton x:ConnectionId='1' Label="Refresh" Icon="Refresh"                            Grid.Column="2"/>
                <AppBarButton x:ConnectionId='2' Label="Back" Icon="Back"                               Grid.Column="2" HorizontalAlignment="Right"/>
                <AppBarButton x:ConnectionId='3' Grid.Column="1" HorizontalAlignment="Left" Label="Lotto"                              />
                <AppBarButton x:ConnectionId='4' Grid.Column="1" HorizontalAlignment="Center" Label="Save" Icon="Save"                             />
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF8EDA7D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="537,179,0,0" TextWrapping="Wrap" Text="Powerball" VerticalAlignment="Top" Height="37" Width="115" FontSize="26" FontStyle="Italic" Foreground="#FFFBF6F6"/>
        <TextBox x:Name="txtP1" HorizontalAlignment="Left" Margin="568,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtP2" HorizontalAlignment="Left" Margin="568,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtP3" HorizontalAlignment="Left" Margin="568,369,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtP4" HorizontalAlignment="Left" Margin="568,431,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtP5" HorizontalAlignment="Left" Margin="568,497,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBlock HorizontalAlignment="Left" Margin="461,508,0,0" TextWrapping="Wrap" Text="Number 5" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Margin="461,442,0,0" TextWrapping="Wrap" Text="Number 4" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Margin="461,378,0,0" TextWrapping="Wrap" Text="Number 3" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Margin="461,309,0,0" TextWrapping="Wrap" Text="Number 2" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Margin="461,248,0,0" TextWrapping="Wrap" Text="Number 1" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" FontStyle="Italic"/>
        <AppBarButton HorizontalAlignment="Left" Icon="Back" Label="Back" Margin="2,3,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>

