<Page
    x:Class="LottoAppProject.AddLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LottoAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <AppBar IsSticky="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <AppBarButton x:ConnectionId='1' Grid.Column="1" HorizontalAlignment="Right" Label="Refresh" Icon="Refresh"                             />
                <AppBarButton x:ConnectionId='2' Grid.Column="1" HorizontalAlignment="Left" Label="Powerball"                              />
                <AppBarButton x:ConnectionId='3' Grid.Column="1" HorizontalAlignment="Center" Label="Save" Icon="Save"                             />
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Background="#FF38B2B8">
        <TextBlock Margin="551,84,556,0" TextWrapping="Wrap" Text="Lotto &amp; LottoPlus" Height="37" FontSize="30" Foreground="#FFFBF6F6" VerticalAlignment="Top"/>
        <TextBox x:Name="txtOne" HorizontalAlignment="Center" Margin="687,200,615,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtTwo" HorizontalAlignment="Center" Margin="687,261,615,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.467,1.92" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtThree" HorizontalAlignment="Center" Margin="687,329,615,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtFour" HorizontalAlignment="Center" Margin="687,392,615,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtFive" HorizontalAlignment="Center" Margin="687,459,615,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBox x:Name="txtSix" HorizontalAlignment="Center" Margin="688,522,614,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF131212" BorderBrush="#FF097EF3" Height="40"/>
        <TextBlock HorizontalAlignment="Center" Margin="564,264,713,0" TextWrapping="Wrap" Text="Number 2" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" />
        <TextBlock HorizontalAlignment="Center" Margin="564,334,713,0" TextWrapping="Wrap" Text="Number 3" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" />
        <TextBlock HorizontalAlignment="Center" Margin="564,398,713,0" TextWrapping="Wrap" Text="Number 4" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" />
        <TextBlock HorizontalAlignment="Center" Margin="564,462,713,0" TextWrapping="Wrap" Text="Number 5" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" />
        <TextBlock HorizontalAlignment="Center" Margin="564,529,713,0" TextWrapping="Wrap" Text="Number 6" VerticalAlignment="Top" Foreground="#FFFBF6F6" FontSize="20" />
        <TextBlock Margin="564,203,713,0" TextWrapping="Wrap" Text="Number 1" Foreground="#FFFBF6F6" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <AppBarButton x:ConnectionId='4' HorizontalAlignment="Left" Icon="Back" Label="Back" Margin="2,2,0,0" VerticalAlignment="Top"                           />
    </Grid>
</Page>

